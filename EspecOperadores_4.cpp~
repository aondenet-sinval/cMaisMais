#include <iostream>
using namespace std;
int main( ){
float num;
char op; int a = 1;
	// obtem uma expressao do usuario
	//cout << "Entre com o numero de repetições: \n";
	//cin >> num;
	//Exemplo 1:
	num = 5;
	do{
	 	cout << "Repetindo 1: " << a << endl;//expressão executada.
	 	a++;//a é incrementado.
	 	if(a <= 3){
	 	continue;//Aqui cancelamos a impressão da próxima expressão enquanto a <= 3.	 	
	 	}
	 	cout << "Repetindo 2: " << a << endl;//expressão executada.
	 	//break;//É possível interromper o teste com break, e assim cancelar a repetição.	
	}while(a <= num);//Teste é realizado depois da primeira execução.
}